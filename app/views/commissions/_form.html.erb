<%= simple_form_for @commission, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :type %>
  <%= error_span(@commission[:type]) %>
  <%= f.association :vehicle_type %>
  <%= error_span(@commission[:vehicle_type_id]) %>
  <%= f.association :districts %>
  <%= error_span(@commission[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                commissions_path, :class => 'btn btn-default' %>
<% end %>
