<%= simple_form_for @district, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@district[:name]) %>
  <%= f.input :description %>
  <%= error_span(@district[:description]) %>
  <!-- <%= f.input :flag %> -->
  <!-- <%= error_span(@district[:flag]) %> -->
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                districts_path, :class => 'btn btn-default' %>
<% end %>
