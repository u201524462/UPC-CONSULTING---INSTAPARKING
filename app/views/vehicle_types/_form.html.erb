
<%= simple_form_for @vehicle_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :short_description %>
  <%= error_span(@vehicle_type[:short_description]) %>
  <%= f.input :long_description %>
  <%= error_span(@vehicle_type[:long_description]) %>
  
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),vehicle_types_path, :class => 'btn btn-default' %>
<% end %>








