<%- model_class = VehicleType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id)%></th>
      <th><%= model_class.human_attribute_name(:short_description)%></th>
      <th><%= model_class.human_attribute_name(:long_description)%></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicle_types.each do |vehicle_type| %>
      <tr>
        <td><%= link_to vehicle_type.id,vehicle_type_path(vehicle_type) %></td>
        <td><%= vehicle_type.short_description %></td>
        <td><%= vehicle_type.long_description %></td>
        <td>
           <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      vehicle_type_path(vehicle_type), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vehicle_type_path(vehicle_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
   
      </tr>
    <% end %>
  </tbody>
</table>

