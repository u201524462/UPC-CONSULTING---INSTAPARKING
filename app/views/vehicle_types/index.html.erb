<h1>Listing Vehicle Types</h1>

<table>
  <thead>
    <tr>
      <th>Short description</th>
      <th>Long description</th>
      <th>Flag1</th>
      <th>Flag2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_types.each do |vehicle_type| %>
      <tr>
        <td><%= vehicle_type.short_description %></td>
        <td><%= vehicle_type.long_description %></td>
        <td><%= vehicle_type.flag1 %></td>
        <td><%= vehicle_type.flag2 %></td>
        <td><%= link_to 'Show', vehicle_type %></td>
        <td><%= link_to 'Edit', edit_vehicle_type_path(vehicle_type) %></td>
        <td><%= link_to 'Destroy', vehicle_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

