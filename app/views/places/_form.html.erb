

<%= simple_form_for @place, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :label => "Commission Type", :placeholder =>   "" %>
  <%= error_span(@place[:name]) %>
  <%= f.input :name %>
  <%= error_span(@place[:name]) %>
  <%= f.association :district %>
  <%= error_span(@place[:district_id]) %>
  <%= f.association :vehicle_type %>
  <%= error_span(@place[:vehicle_type_id]) %>
  <%= f.input :vehicle_type_small_price %>
  <%= error_span(@place[:vehicle_type_small_price]) %>
  <%= f.input :vehicle_type_medium_price %>
  <%= error_span(@place[:vehicle_type_medium_price]) %>
  <%= f.input :vehicle_type_big_price %>
  <%= error_span(@place[:vehicle_type_big_price]) %>
  <%= f.input :extra_features_string %>
  <%= error_span(@place[:extra_features_string]) %>
  <%= f.input :flag %>
  <%= error_span(@place[:flag]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                districts_path, :class => 'btn btn-default' %>
<% end %>