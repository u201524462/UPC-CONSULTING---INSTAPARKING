<%= simple_form_for(@reservation), :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :pickupdate %>
  <%= error_span(@reservation[:pickupdate]) %>
  <%= f.input :pickuptime %>
  <%= error_span(@reservation[:pickuptime]) %>
  <%= f.input :origin %>
  <%= error_span(@reservation[:origin]) %>
  <%= f.input :destiny %>
  <%= error_span(@reservation[:destiny]) %>
  <%= f.input :status, :as => :hidden, :input_html => { :value => 'ACT' } %>
  <%= error_span(@reservation[:status]) %>
  <%= f.input :npassengers, :label => "Number of Passengers", :placeholder =>   "" %>
  <%= error_span(@reservation[:npassengers]) %>
  <%= f.input :price %>
  <%= error_span(@reservation[:price]) %>
  <%= f.input :currency %>
  <%= error_span(@reservation[:currency]) %>
  <%= f.association :profile %>
  <%= error_span(@reservation[:profile_id]) %>
  <%= f.association :vehicle %>
  <%= error_span(@reservation[:vehicle_id]) %>
  <%= f.association :service %>
  <%= error_span(@reservation[:service_id]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path(@profile, @vehicle, @service), :class => 'btn btn-default' %>
<% end %>
