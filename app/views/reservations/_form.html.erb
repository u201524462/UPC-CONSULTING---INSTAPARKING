<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :district %>
  <%= error_span(@reservation[:districts_id]) %>
  <%= f.association :vehicle_type %>
  <%= error_span(@reservation[:vehicle_type_id]) %>
  <%= f.association :place %>
  <%= error_span(@reservation[:place_id]) %>
  <%= f.input :start_date %>
  <%= error_span(@reservation[:start_date]) %>
  <%= f.input :end_date %>
  <%= error_span(@reservation[:end_date]) %>
  <%= f.input :start_time %>
  <%= error_span(@reservation[:start_time]) %>
  <%= f.input :end_time %>
  <%= error_span(@reservation[:end_time]) %>
  <%= f.input :price %>
  <%= error_span(@reservation[:price]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>
